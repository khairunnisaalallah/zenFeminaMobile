<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:onClick="onButtonClick"
                app:srcCompat="@drawable/back" />

            <TextView
                android:id="@+id/btntext4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/outfitlight"
                android:text="Ubah Kata Sandi"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:ignore="MissingConstraints" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cardfirstpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">

            <TextView
                android:id="@+id/tvname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/outfitlight"
                android:text="Masukkan Kata Sandi baru"
                android:textColor="#464444"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/kotak1"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                app:srcCompat="@drawable/txtf" />

            <EditText
                android:id="@+id/firstpassword"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="43dp"
                android:background="#99ffffff"
                android:fontFamily="@font/outfitlight"
                android:hint="kata sandi "
                android:inputType="textPassword"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cardsecondpass"
            android:layout_below="@+id/cardfirstpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/outfitlight"
                android:text="Ulangi Kata Sandi"
                android:textColor="#464444"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/kotak2"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                app:srcCompat="@drawable/txtf" />

            <EditText
                android:id="@+id/secondpass"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="43dp"
                android:background="#99ffffff"
                android:fontFamily="@font/outfitlight"
                android:hint="Kata Sandi"
                android:inputType="textPassword"
                android:textSize="14sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/simpan"
            style="@android:style/Widget.Button"
            android:layout_width="322dp"
            android:layout_height="42dp"
            android:layout_below="@+id/cardsecondpass"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_backround"
            android:clickable="true"
            android:fontFamily="@font/outfitbold"
            android:onClick="onButtonClick"
            android:text="Ubah Kata Sandi"
            android:textColor="#FFFFFF"
            android:textSize="19sp" />

    </RelativeLayout>

</RelativeLayout>