<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/loginNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="105dp"
        android:layout_marginTop="680dp"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:fontFamily="@font/outfitbold"
        android:onClick="onButtonClick"
        android:text="Masuk" />

    <TextView
        android:id="@+id/btntext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="680dp"
        android:fontFamily="@font/outfitlight"
        android:text="Sudah punya akun?"
        android:textColor="#8B8B8B"
        android:textSize="15sp" />
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:onClick="onButtonClick"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/titledaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/outfitbold"
        android:text="Daftar"
        android:textColor="#454444"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="75dp" />

    <TextView
        android:id="@+id/btntext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/outfitlight"
        android:text="Daftarkan akunmu sekarang!"
        android:textColor="#8B8B8B"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/imageButtonbackr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFFFF"
        android:onClick="onButtonClick"/>
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/txtf" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="48dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/txtf" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="48dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/txtf" />

    <EditText
        android:id="@+id/email"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="280dp"
        android:background="#99FFFFFF"
        android:ems="10"
        android:fontFamily="@font/outfitlight"
        android:hint="Email"
        android:textSize="14dp"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="350dp"
        android:background="#99FFFFFF"
        android:ems="10"
        android:fontFamily="@font/outfitlight"
        android:hint="Kata Sandi"
        android:inputType="textPassword"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />


    <EditText
        android:id="@+id/username"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="210dp"
        android:background="#99FFFFFF"
        android:ems="10"
        android:fontFamily="@font/outfitlight"
        android:hint="Username"
        android:textSize="14dp"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9" />

    <Button
        android:id="@+id/daftar"
        style="@android:style/Widget.Button"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_marginTop="450dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_backround"
        android:clickable="true"
        android:fontFamily="@font/outfitbold"
        android:onClick="onButtonClick"
        android:text="Daftar"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="460dp"
        android:text="error_while_logging_in"
        android:textColor="#F44336"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="182dp"
        android:layout_marginTop="450dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</RelativeLayout>