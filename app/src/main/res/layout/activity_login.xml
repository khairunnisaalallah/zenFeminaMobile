<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/btntext2"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/outfitlight"
        android:text="Masuk ke akunmu, dan mulai atur jadwal siklusmu dari sekarang"
        android:textColor="#8B8B8B"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/registerNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="105dp"
        android:layout_marginTop="680dp"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:fontFamily="@font/outfitbold"
        android:onClick="onButtonClick"
        android:text="Daftar" />



    <TextView
        android:id="@+id/btntext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginTop="680dp"
        android:layout_marginEnd="120dp"
        android:fontFamily="@font/outfitlight"
        android:text="Tidak punya akun?"
        android:textColor="#8B8B8B"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/titlemasuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/outfitbold"
        android:text="Masuk"
        android:textColor="#454444"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="75dp" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:onClick="onButtonClick"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="48dp"
        app:srcCompat="@drawable/txtf" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="48dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/txtf" />

    <TextView
        android:id="@+id/lupapw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginTop="368dp"
        android:fontFamily="@font/outfitmedium"
        android:onClick="onButtonClick"
        android:text="Lupa Kata Sandi?"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="240dp"
        android:background="#99FFFFFF"
        android:ems="10"
        android:textSize="14dp"
        android:fontFamily="@font/outfitlight"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="310dp"
        android:background="#99FFFFFF"
        android:ems="10"
        android:fontFamily="@font/outfitlight"
        android:hint="Kata Sandi"
        android:textSize="14dp"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/masuk"
        style="@android:style/Widget.Button"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:background="@drawable/button_backround"
        android:clickable="true"
        android:fontFamily="@font/outfitbold"
        android:onClick="onButtonClick"
        android:text="Masuk"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/masukGoogle"
        style="@android:style/Widget.Button"
        android:layout_width="295dp"
        android:layout_height="38dp"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/background_btn_intro"
        android:clickable="true"
        android:fontFamily="@font/outfitbold"
        android:onClick="onButtonClick"
        android:text="Masuk dengan Google"
        android:textColor="#D74155"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:text="error_while_logging_in"
        android:layout_centerHorizontal="true"
        android:textColor="#F44336"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ProgressBar
        android:id="@+id/loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</RelativeLayout>