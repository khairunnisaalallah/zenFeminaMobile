<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/textviewMG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/outfitlight"
        android:text="ZenFemina"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButtoncalender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/calender" />


    <ImageButton
        android:id="@+id/imageButtonNotifikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/notifikasi" />

    <ImageView
        android:id="@+id/imageViewLingkaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewMG"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        app:srcCompat="@drawable/lingkarandashboard" />

    <androidx.cardview.widget.CardView
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="620dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/btnhutangsholat"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/warningvector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/warningcircle" />

            <TextView
                android:id="@+id/tvisibtnhaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="52dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/outfitlight"
                android:text="Anda memiliki hutang sholat"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/nextpage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="20dp"
                app:srcCompat="@drawable/nextpage"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



    <ImageButton
        android:id="@+id/imageButtonAwali"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewMG"
        android:layout_alignStart="@+id/imageViewLingkaran"
        android:layout_alignTop="@+id/imageViewLingkaran"
        android:layout_alignEnd="@+id/imageViewLingkaran"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/btnawali" />

    <TextView
        android:id="@+id/textViewBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewMG"
        android:layout_alignTop="@+id/imageViewLingkaran"
        android:layout_marginTop="207dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:textColor="#DA4256"
        android:textSize="12sp"
        android:text="Awali Menstruasi" />

    <TextView
        android:id="@+id/tanggal"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewMG"
        android:layout_alignStart="@+id/imageViewLingkaran"
        android:layout_alignTop="@+id/imageViewLingkaran"
        android:layout_alignEnd="@+id/imageViewLingkaran"
        android:layout_marginStart="105dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="105dp"
        android:gravity="center_vertical"
        android:textColor="#D09898"
        android:textSize="15sp"
        tools:text="20 Agustus" />

    <TextView
        android:id="@+id/hari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewMG"
        android:layout_marginTop="295dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:textColor="#DA4256"
        android:textSize="32sp"
        android:textStyle="bold"
        tools:text="10 Hari Lagi" />

    <TextView
        android:id="@+id/menujusiklus"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewMG"
        android:layout_marginTop="340dp"
        android:layout_centerHorizontal="true"
        android:text="menuju siklus haid selanjutnya"
        android:textAlignment="center"
        android:textColor="#DA4256"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageViewKotak"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewMG"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        app:srcCompat="@drawable/kotakdashboard" />

    <TextView
        android:id="@+id/firstdate2"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewMG"
        android:layout_alignStart="@+id/imageViewKotak"
        android:layout_alignTop="@+id/imageViewKotak"
        android:layout_alignEnd="@+id/imageViewKotak"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="174dp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="25 Agustus" />

    <TextView
        android:id="@+id/firstdate"
        android:layout_width="135dp"
        android:layout_height="32dp"
        android:layout_below="@id/textviewMG"
        android:layout_alignStart="@+id/imageViewKotak"
        android:layout_alignTop="@+id/imageViewKotak"
        android:layout_alignEnd="@+id/imageViewKotak"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="171dp"
        android:gravity="center_vertical"
        android:text="Siklus sebelumnya"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/lastdate2"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewMG"
        android:layout_alignStart="@+id/imageViewKotak"
        android:layout_alignTop="@+id/imageViewKotak"
        android:layout_alignEnd="@+id/imageViewKotak"
        android:layout_marginStart="175dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="22 September" />

    <TextView
        android:id="@+id/lastdateWords"
        android:layout_width="145dp"
        android:layout_height="30dp"
        android:layout_below="@id/textviewMG"
        android:layout_marginStart="175dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:layout_alignStart="@+id/imageViewKotak"
        android:layout_alignEnd="@+id/imageViewKotak"
        android:layout_alignTop="@+id/imageViewKotak"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:text="Siklus Selanjutnya"
        android:textSize="14sp" />

</RelativeLayout>